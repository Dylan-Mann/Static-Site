html
head
    title {{title}}
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    //
       CSS files! 
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
    link(href='{{base}}/{{page}}/index.css', rel='stylesheet')
    link(rel='stylesheet', href='//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/base/jquery-ui.css')
    //if lt IE 9
      script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    //
       Javascript files! 
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script
      window.jQuery || document.write('<script src="{{static}}/javascript/jquery.js"><\\/script>')
    script(src='{{static}}/javascript/jquery-ui.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/keymage/1.0.1/keymage.min.js')
    script(src='{{base}}/{{page}}/index.js')
    //
       slider JS files 
    link(href='{{static}}/royalslider/royalslider.css', rel='stylesheet')
    script(src='{{static}}/royalslider/jquery.royalslider.min.js')
    link(href='{{static}}/royalslider/minimal-white/rs-minimal-white.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Ubuntu', rel='stylesheet', type='text/css')
